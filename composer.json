{
    "name": "2amigos/yii2-grid-view-library",
    "description": "GridView Widget Extensions for Yii2.",
    "keywords": ["yii", "extension", "widget", "grid"],
    "type": "yii2-extension",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Antonio Ramirez",
            "email": "ramirez.cobos@gmail.com",
            "homepage": "http://2amigos.us"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "yiisoft/yii2": "*",
        "2amigos/yii2-editable-widget": "*",
        "2amigos/yii2-dosamigos-asset-bundle": "0.1.*",
        "bower-asset/jquery.floatThead": "^2.0",
        "bower-asset/jquery-resizable-columns": "^0.2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "friendsofphp/php-cs-fixer": "^2.0",
        "squizlabs/php_codesniffer": "*",
        "phpmd/phpmd": "@stable"
    },
    "autoload": {
        "psr-4": {
            "dosamigos\\grid\\": "src"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "preferred-install": {
            "*": "auto"
        },
        "fxp-asset": {
            "installer-paths": {
                "npm-asset-library": "vendor/npm",
                "bower-asset-library": "vendor/bower"
            },
            "vcs-driver-options": {
                "github-no-api": true
            },
            "git-skip-update": "2 days",
            "pattern-skip-version": "(-build|-patch)"
        }
    }
}
